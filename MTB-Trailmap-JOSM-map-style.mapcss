        tag("mtb:scale") == "2" ? "#feb13e" :
        tag("mtb:scale") == "3" ? "#ff4355" :
        tag("mtb:scale") == "4" ? "#e410dd" :
        tag("mtb:scale") == "5" ? "#9600c8" :
