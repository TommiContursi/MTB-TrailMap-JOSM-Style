}
way|z20-[highway=~/track|path/][surface][setting("surface_display_text")]::surface_text {
    font-size: 13;
    text-offset: -14;
}

way[mtb:scale][setting("mtb_scale_display")] {
    casing-color: eval(
        tag("mtb:scale") == "0-" ? "#10c5a1" :
        tag("mtb:scale") == "0" ? "#75df08" :
        tag("mtb:scale") == "1" ? "#d8dc00" :
